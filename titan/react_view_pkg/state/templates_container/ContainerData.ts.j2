{% magic_with _.container.name as myContainer %}
{% magic_with _.container.item.item_name as myItem %}
import { data, input, output } from 'skandha';
import { MyItemByIdT, MyItemT } from 'src/api/types/MyItemT';
import { listToItemById } from 'src/utils/ids';

export class MyContainerData {
  static className = () => 'MyContainerData';

  @input myItems: Array<MyItemT> = [];
  @output myItemsDisplay: Array<MyItemT> = [];                          {% ?? _.container.get_bvr("filtering") or _.container.get_bvr("insertion") %}
  @data previousMyItem?: MyItemT;                                       {% ?? _.container.get_bvr("addition") %}

  @output get myItemById(): MyItemByIdT {
    return listToItemById(this.myItems);                                {% ?? not (_.container.get_bvr("filtering") or _.container.get_bvr("insertion")) %}
    return listToItemById(this.myItemsDisplay);                         {% ?? _.container.get_bvr("filtering") or _.container.get_bvr("insertion") %}
  }
}
{% end_magic_with %}
{% end_magic_with %}
