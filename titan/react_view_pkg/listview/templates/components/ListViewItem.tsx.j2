{% magic_with _.component.item_name as yellowTulip %}
import React from 'react';
import classnames from 'classnames';
import { observer } from 'mobx-react-lite';
import { YellowTulipT } from 'src/api/types/YellowTulipT';

import './YellowTulipListViewItem.scss';

export type PropsT = {
  yellowTulip: YellowTulipT;
  onDelete: Function;                                                                             {% if _.deletion_bvr %}{% endif %}
  className?: any;
  onClick?: any;
  onMouseDown?: any;
  onMouseUp?: any;
};

export const YellowTulipListViewItem: React.FC<PropsT> = observer((props: PropsT) => {
  return (
    <div
      className={classnames(
        'YellowTulipListViewItem', 'flex flex-col flex-1 mb-2',
        props.className
      )}
      onClick={props.onClick}
      onMouseDown={props.onMouseDown}
      onMouseUp={props.onMouseUp}
    >
      // TODO: use item_view.Helpers.fields
      <button                                                                                     {% if _.deletion_bvr %}
        onClick={() => {
          props.onDelete();
        }}
      >
        Delete
      </button>                                                                                   {% endif %}
    </div>
  );
});
{% end_magic_with %}
