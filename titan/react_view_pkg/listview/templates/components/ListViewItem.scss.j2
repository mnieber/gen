{% magic_with _.component.item_name as yellowTulip %}
.YellowTulipListViewItem {
  @apply cursor-pointer;                              {% if _.service.tailwindcss %}
  cursor: pointer;                                    {% else %}{% endif %}
}
                                                      {% for bvr in _.component.bvrs %}
.YellowTulipListViewItem--selected {                  {% if bvr.name == "selection" %}
  @apply bg-yellow-400 font-bold;                     {% if _.service.tailwindcss %}
  background-color: #ffeb3b;                          {% else %}{% endif %}
}                                                     {% endif %}

.YellowTulipListViewItem--highlighted {               {% if bvr.name == "highlight" %}
  @apply border-4 border-blue-300;                    {% if _.service.tailwindcss %}
  border-color: #0070f3;                              {% else %}
  border-width: 4px;                                  {% endif %}
}                                                     {% endif %}
                                                      {% endfor %}
{% end_magic_with %}
