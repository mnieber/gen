{% magic_with myItem = __.item_name %}
{% magic_with myModule = _.component.module.name %}
{% magic_with myListView = _.component.name %}
{% trim_newlines keep=1 %}
.MyListViewItem {
  @apply cursor-pointer;
}

.MyListViewItem--highlighted {                                              {% if __.has_highlight %}
  @apply font-bold;
}                                                                           {% endif %}

.MyListViewItem--selected {                                                 {% if __.has_selection %}
  @apply bg-[green];
}                                                                           {% endif %}

.MyListViewItem--drag-before {                                              {% if __.has_drag_and_drop %}
  border-top: solid;
}

.MyListViewItem--drag-after {
  border-bottom: solid;
}                                                                           {% endif %}
{% end_trim_newlines %}
