{% clean_up_js_imports %}
import { observer } from 'mobx-react-lite';
import { withDefaultProps } from 'react-default-props-context';
import { YellowTulipT } from 'src/api/types/YellowTulipT'
import { getResourceView } from 'src/utils/components';
{% end_clean_up_js_imports %}

import './{{ _.component.name }}.scss';

type PropsT = {
};

type DefaultPropsT = {
  yellowTulip: YellowTulipT
  yellowTulipRS: string
};

export const YellowTulipView = observer(
  withDefaultProps<PropsT, DefaultPropsT>((props: PropsT & DefaultPropsT) => {
    const resourceView = props.yellowTulipRS === 'loading' || !props.yellowTulip ? (
      <div>Loading...</div>
    ) : undefined;
    if (resourceView) return resourceView;

    return (
      <div className="YellowTulipView flex flex-col w-full">
        {{ __.fields() }}
      </div>
    );
  })
);
