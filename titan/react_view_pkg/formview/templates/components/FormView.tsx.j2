import React from 'react';
import { observer } from 'mobx-react-lite';
import {
  FormStateProvider,
  HandleValidateArgsT,
  HandleSubmitArgsT,
} from 'react-form-state-context';
import { useStore } from 'src/app/components';
import { Field } from 'src/forms/components/Field';
import { GlobalError } from 'src/forms/components/GlobalError';
import { TextField } from 'src/forms/components/TextField';
import { SaveButton } from 'src/forms/components/SaveButton';

import './YellowTulipView.scss';

type PropsT = {
};

export const YellowTulipView: React.FC<PropsT> = observer(() => {
  const { gardenFlowersStore } = useStore();

  const initialValues = {
{{ res.sections.item_fields(res.item_name) }}
  };
  const initialErrors = {};
  const handleValidate = ({values, setError} : HandleValidateArgsT) => {};
  const handleSubmit = ({values}: HandleSubmitArgsT) => {
    gardenFlowersStore.saveYellowTulip(values);
  };

  const formDiv = (
    <div className="YellowTulipView flex flex-col w-full">
      <FormStateProvider
        initialValues={initialValues}
        initialErrors={initialErrors}
        handleValidate={handleValidate}
        handleSubmit={handleSubmit}
      >
        <GlobalError />
        <Field fieldName="name" label="Name">
          <TextField />
        </Field>
        <SaveButton
          label="Save"
          disabled={false}
        />
      </FormStateProvider>
    </div>
  );

  return formDiv;
});
