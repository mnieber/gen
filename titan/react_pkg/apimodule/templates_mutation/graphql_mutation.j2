      }
    }`,
    args
  ).then(
    (response: ObjT) => {
      return wait(
        process.env.NODE_ENV === 'development' ? 1000 : 0,
        response.callMyEndpoint
      );
    }
  );
};

export const useCallMyEndpoint = () => {
  return useMutation({
    mutationKey: ['callMyEndpoint'],
    mutationFn: callMyEndpoint,
