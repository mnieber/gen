import { useFormStateContext } from 'react-form-state-context';
import { ukButton } from 'src/frames/components/Button';                                      {% ?? _.service.uikit %}

interface PropsT {
  label: string;
  disabled?: boolean;
  className?: any;
}

export const SaveButton = (props: PropsT) => {
  const formState = useFormStateContext();
  return (
    <button
      className={props.className ?? `{% if _.service.uikit %}${ukButton} {%endif %}ml-2`}
      onClick={(e) => {
        e.preventDefault();
        formState.submit();
      }}
      disabled={props.disabled || formState.getFlag('submitting')}
    >
      {props.label}
    </button>
  );
};
